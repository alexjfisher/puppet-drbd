resource <%= @name %> {

<% unless @protocol.nil? -%>
  protocol  <%= @protocol %>;
<% end -%>
  device    <%= @device %>;
  disk      <%= @disk %>;
  meta-disk internal;

  net {
    cram-hmac-alg sha1;
<% if @secret -%>
    shared-secret "<%= @secret %>";
<% end -%>
    #allow-two-primaries;
<% @net_parameters.sort_by {|k, v| k}.each do |k, v| -%>
    <%= k %> <%= v %>;
<% end -%>
  }

  syncer {
    verify-alg <%= @verify_alg %>;
<% if @rate -%>
    rate <%= @rate %>;
<% end -%>
  }

